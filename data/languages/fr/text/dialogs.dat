-- Les messages ci-dessous sont affichés lorsque le joueur obtient
-- un trésor, généralement en ouvrant un coffre ou en l'achetant
-- dans un magasin.

-- Bouclier.
dialog{
  id = "_treasure.shield.1",
  text = [[
Tu as trouvé un bouclier !!!

Ta défense augmente d'un point !
]]
}

-- Épée.
dialog{
  id = "_treasure.sword.1",
  text = [[
Tu as trouvé une épée !!!

Tu vas pouvoir te défendre face aux monstres
avec la touche C !
Maintiens C enfoncé pour charger une attaque
cyclone !!!
]]
}

-- Marteau.
dialog{
  id = "_treasure.hammer.1",
  text = [[
Tu as trouvé le marteau magique !!!
Utilise-le pour écraser les obstacles.
]]
}

